{% extends "base.twig" %}

{% block content %}

<div class="medium_hero contact_hero">
    <h1>CONTACT</h1>
</div>
<div class="contact_details">
    <div class="my_container">
        <div class="tribox">
            <a class="tribox__single_a" href="tel:02393876445">
                <div class="tribox__single">
                    <div class="tribox__single__imageleft"></div>
                    <div class="tribox__single__content">
                        <img class="tribox__single__icon" src="{{ site.theme.link }}/assets/img/PhoneIcon-01.svg" alt="phone icon">
                        <h3>Call us:</h3>
                        <p>02393 876 445</p>
                    </div>
                </div>
            </a>
            <a class="tribox__single_a" href="mailto:info@attegagroup.com">
                <div class="tribox__single">
                    <div class="tribox__single__imageleft"></div>
                    <div class="tribox__single__content">
                        <img class="tribox__single__icon" src="{{ site.theme.link }}/assets/img/EmailIcon-01.svg" alt="email / mail icon">
                        <h3>Email us:</h3>
                        <p>info@attegagroup.com</p>
                    </div>
                </div>
            </a>
            <a class="tribox__single_a" href="https://www.google.com/maps/place/Attega+Group/@50.8649655,-1.2447932,17z/data=!4m5!3m4!1s0x4874430ee3d117b3:0xb604a5f9c317de08!8m2!3d50.8647928!4d-1.2401905">
                <div class="tribox__single">
                    <div class="tribox__single__imageleft"></div>
                    <div class="tribox__single__content">
                        <img class="tribox__single__icon" src="{{ site.theme.link }}/assets/img/LocationIcon-01.svg" alt="location arrow icon">
                        <h3>25 Barnes Wallis Rd,</h3>
                        <p>Fareham PO15 5TT</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="contact_formarea">
    <div class="my_container">
        <div class="contact_formarea__header">
            <h2>Don't hesitate, get in touch.</h2>
            <p>Whether you're looking for your next career move, or looking for new members of your team, we'd love to hear from you.<br>
            Fill out the form below and a member of our team will get back to you as soon as possible!</p>
        </div>
        <div class="contact_formarea__content">
            <div class="contact_formarea__content__left">
                {{ function('do_shortcode', '[contact-form-7 id="163" title="Contact Page Contact Form"]') }}
            </div>
            <div class="contact_formarea__content__right">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2518.174696919974!2d-1.2447932!3d50.8649655!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4874430ee3d117b3%3A0xb604a5f9c317de08!2sAttega%20Group!5e0!3m2!1sen!2suk!4v1639661055928!5m2!1sen!2suk" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block body_end %}

{% endblock %}